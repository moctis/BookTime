@import utils

.switch
  inline-block()
  reset-box-model()

.switch__input
  hide-input()

.switch__toggle
  inline-block()
  reset-box-model()
  reset-base()
  reset-cursor()

.switch__toggle:before,
.switch__toggle:after
  content ''
  position absolute
  z-index: -1
  reset-box-model()

.switch--disabled
  disabled()

