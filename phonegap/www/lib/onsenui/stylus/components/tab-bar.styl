retina-tabbar-border(color = var-tab-bar-border-color)
  +retina-query()
    border-top none
    background-size 100% 1px
    background-repeat no-repeat
    background-position top
    background-image linear-gradient(180deg, color, color 50%, transparent 50%)

.tab-bar
  reset-font()
  display table
  table-layout fixed
  position absolute
  bottom 0px
  left 0px
  right 0px
  white-space nowrap
  margin 0
  padding 0
  height var-height--tab-bar
  background-color var-background-color--tab-bar
  border-top var-border-top--tab-bar
  width 100%
  retina-tabbar-border(color = var-tab-bar-border-color)

.tab-bar__item
  reset-font()
  hide-input-parent()
  display table-cell
  width auto
  border-radius 0

.tab-bar__item > input
  hide-input()

.tab-bar__button
  inline-block()
  reset-font()
  reset-box-model()
  reset-base()
  reset-cursor()
  ellipsis()
  text-decoration none
  padding 0
  height var-line-height--tab-bar__button
  line-height var-line-height--tab-bar__button
  letter-spacing var-letter-spacing
  color var-color--tab-bar__button
  text-shadow var-text-shadow
  vertical-align top
  background-color transparent
  box-shadow var-box-shadow
  border-top var-border--tab-bar__button
  width 100%
  font-weight var-font-weight
  @media (-webkit-min-device-pixel-ratio: 1.5), (min-device-pixel-ratio: 1.5) 
    border-top none

.tab-bar__button > .tab-bar__icon
  font-size 24px
  padding 0
  margin 0
  line-height 32px
  display block
  height 32px

.tab-bar__label
  reset-font()

.tab-bar__icon + .tab-bar__label
  font-size 10px
  line-height 1
  margin 0
  font-weight var-font-weight

.tab-bar__label:first-child
  font-size 16px
  line-height var-line-height--tab-bar__button
  margin 0
  padding 0

.tab-bar__button
  color var-color--tab-bar__button

.tab-bar__button:active,
:checked + .tab-bar__button
  color var-color--tab-bar--active
  background-color transparent
  box-shadow var-box-shadow--tab-bar--active
  border-top var-border-top--tab-bar--active

.tab-bar__button:active > .tab-bar__icon,
:checked + .tab-bar__button > .tab-bar__icon
  color var-color--tab-bar--active

.tab-bar__button:disabled
  disabled()

.tab-bar__button:focus
  z-index 1
  border-top var-border-top--tab-bar--focus
  box-shadow var-box-shadow--tab-bar__button--focus
  outline 0

